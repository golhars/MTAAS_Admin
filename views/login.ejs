<script>


    var app=angular.module('Mtaas', [])
    app.controller('Mtaas', ['$scope', '$http', '$window', '$timeout',function ( $scope,$http,$window)
    {
       //Logan Nikkialert("in controller");

        $scope.loginAdmin = function (){

            var in_name = $scope.name;
            //alert(in_name);

            var in_password=$scope.password;

            $http({
                method: 'POST',
                url: '/loginAdmin',
                data: {"name":in_name,"password":in_password}
            }).
                    then(function(response) {
                        //alert("ia minside");
                        if(response.data.status == 100)
                        {
                            alert("Invalid User and Password!");
                        }
                        else if(response.data.status == 178)
                        {
                            $window.location.href = '/index2';
                        }
                        else if(response.data.status == 179)
                        {
                            $window.location.href = '/main_admin';
                        }
                        else if(response.data.status == 180)
                        {
                            $window.location.href = '/tester_admin';
                        }
                    });

        }



    }]);












</script>


